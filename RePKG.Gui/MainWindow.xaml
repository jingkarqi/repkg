<Window x:Class="RePKG.Gui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{DynamicResource AppTitle}"
        Height="520" Width="780"
        MinHeight="420" MinWidth="650">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"
                   Text="{DynamicResource LanguageLabel}" Margin="0,0,8,0" />
        <ComboBox x:Name="LanguageCombo" Grid.Row="0" Grid.Column="1"
                  Width="160" HorizontalAlignment="Left"
                  SelectionChanged="LanguageCombo_OnSelectionChanged">
            <ComboBoxItem Tag="en-US">English</ComboBoxItem>
            <ComboBoxItem Tag="zh-CN">简体中文</ComboBoxItem>
        </ComboBox>

        <TextBlock Grid.Row="1" Grid.Column="0" VerticalAlignment="Center"
                   Text="{DynamicResource InputLabel}" Margin="0,8,8,0" />
        <TextBox x:Name="InputTextBox" Grid.Row="1" Grid.Column="1" Margin="0,8,8,0" />
        <Button Grid.Row="1" Grid.Column="2" Margin="0,8,0,0" Padding="10,2"
                Content="{DynamicResource BrowseButton}" Click="BrowseInput_OnClick" />

        <TextBlock Grid.Row="2" Grid.Column="0" VerticalAlignment="Center"
                   Text="{DynamicResource OutputLabel}" Margin="0,8,8,0" />
        <TextBox x:Name="OutputTextBox" Grid.Row="2" Grid.Column="1" Margin="0,8,8,0" />
        <Button Grid.Row="2" Grid.Column="2" Margin="0,8,0,0" Padding="10,2"
                Content="{DynamicResource BrowseButton}" Click="BrowseOutput_OnClick" />

        <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal" Margin="0,8,0,0">
            <CheckBox x:Name="RecursiveCheckBox" Content="{DynamicResource RecursiveOption}" Margin="0,0,12,0" />
            <CheckBox x:Name="TexDirCheckBox" Content="{DynamicResource TexDirOption}" Margin="0,0,12,0" />
            <CheckBox x:Name="OverwriteCheckBox" Content="{DynamicResource OverwriteOption}" />
        </StackPanel>

        <TextBlock Grid.Row="4" Grid.Column="0" VerticalAlignment="Top"
                   Text="{DynamicResource LogLabel}" Margin="0,8,8,0" />
        <TextBox x:Name="LogTextBox" Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2"
                 Margin="0,8,0,0" AcceptsReturn="True"
                 VerticalScrollBarVisibility="Auto" IsReadOnly="True"
                 TextWrapping="Wrap" />

        <StackPanel Grid.Row="5" Grid.Column="1" Orientation="Horizontal"
                    HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button x:Name="InfoButton" Content="{DynamicResource InfoButton}"
                    Padding="16,6" Margin="0,0,8,0" Click="Info_OnClick" />
            <Button x:Name="ExtractButton" Content="{DynamicResource ExtractButton}"
                    Padding="16,6" Click="Extract_OnClick" />
        </StackPanel>
    </Grid>
</Window>

